            VerticalAlignment="Bottom"  
            Margin="10 0 10 40"
            Height="70"
            Width="300"
            FontWeight="Bold"
            FontSize="40"
            Command="{Binding ShowInputMaskCommand}"
            Content="手输检验单号">
            <userControls:SimpleButton.Template>
