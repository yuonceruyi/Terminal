<UserControl x:Class="YuanTu.Consts.UserControls.TitleLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="100"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="TitleColumnDefinition" />
            <ColumnDefinition x:Name="ValueColumnDefinition" />
        </Grid.ColumnDefinitions>
        <ContentPresenter x:Name="TitlePresenter" Grid.Column="0" />
        <ContentPresenter x:Name="ValuePresenter" Grid.Column="1" />
    </Grid>
</UserControl>































